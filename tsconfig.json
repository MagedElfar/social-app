{
  "compilerOptions": {

    "target": "es2016",
    "module": "commonjs",                                
    "removeComments": true,      
    "outDir": "dist",
    "esModuleInterop": true,
    "noEmitOnError": true,                           
    "forceConsistentCasingInFileNames": true,
    "strict": true,                               
    "skipLibCheck": true                              
  },

  "include": ["src/**/*"]
}
